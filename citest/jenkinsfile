#!groovy

pipeline {
  agent none
  stages {
    stage('Maven Install') {
      agent {
        docker {
          image 'maven:3.5.0'
        }
      }
      steps {
        sh 'mvn -f citest/pom.xml clean install'
      }
    } 
    stage('Docker Build') {
      agent any
      steps {
        sh 'docker build -t LRepo/citest:latest citest'
      }    
    }
  }  
}
